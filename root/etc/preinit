#!/bin/sh
mount none /proc -t proc
insmod diag
echo 0x01 > /proc/sys/diag
sleep 1
if /sbin/resetmon ; then
  mtd unlock mtd4
  mount -t jffs2 /dev/mtdblock/4 /jffs
  pivot_root /jffs /jffs/rom
  mount none /dev -t devfs
  mount none /proc -t proc
  umount rom/proc
  umount rom/dev
else
  export FAILSAFE=true
fi
mount none /tmp -t ramfs
exec /sbin/init
