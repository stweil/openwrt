#!/bin/sh

case $1 in
 start)
  insmod ppp_async >/dev/null 2>&1
  insmod ppp_mppe_mppc >/dev/null 2>&1
  [ -d /var/run ] || mkdir -p /var/run
  /usr/sbin/pptpd
  ;;
 stop)
  [ -f /var/run/pptpd.pid ] && kill $(cat /var/run/pptpd.pid) >/dev/null 2>&1
  ;;
 *)
  echo "usage: $0 (start|stop)"
  exit 1
esac

exit $?
