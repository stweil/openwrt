#!/bin/sh

case $1 in
 start)
  [ -d /var/run/vsftpd ] || mkdir -p /var/run/vsftpd
  /usr/sbin/vsftpd
  ;;
 stop)
  pid=$(pidof vsftpd)
  x=$$ # exclude our pid since we have the same name
  pid=$(echo $pid | sed -e "s/$x//")
  [ -n "$pid" ] && kill -TERM $pid
  ;;
 *)
  echo "usage: $0 (start|stop)"
  exit 1
esac

exit $?
